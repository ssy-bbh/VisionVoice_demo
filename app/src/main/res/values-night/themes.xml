<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Make sure the night theme inherits from the same parent -->
    <style name="Theme.VisionVoice" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- You can customize dark theme specific colors here if needed, -->
        <!-- but for now, we will keep them consistent with the day theme. -->
        <item name="colorPrimary">@color/brand_blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/brand_orange</item>
        
        <!-- For dark mode, the status bar is usually dark with light icons -->
        <item name="android:statusBarColor">@color/surface_gray</item>
        <item name="android:windowLightStatusBar">true</item> <!-- Icons will be dark -->
    </style>

    <!-- The CardStyle can remain in the main themes.xml as it's not mode-specific, -->
    <!-- but having it here doesn't hurt. -->
    <style name="CardStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="cardCornerRadius">16dp</item>
        <item name="cardElevation">2dp</item>
        <item name="cardBackgroundColor">@color/white</item>
    </style>
</resources>